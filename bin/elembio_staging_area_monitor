#!/usr/bin/env perl

use strict;
use warnings;
use FindBin qw($Bin);
use lib ( -d "$Bin/../lib/perl5" ? "$Bin/../lib/perl5" : "$Bin/../lib" );
use English qw(-no_match_vars);
use POSIX qw(strftime);
use Readonly;
use Try::Tiny;
use List::MoreUtils qw(any);
use Log::Log4perl qw(get_logger);
use Pod::Usage;

use npg_tracking::Schema;
use Monitor::Elembio::Staging qw ( find_run_folders );
use Monitor::Elembio::RunFolder;

our $VERSION = '0';

Readonly::Scalar my $SLEEP_INTERVAL => 60 * 15;
Readonly::Scalar my $DRY_RUN => $ENV{'dev'} && ($ENV{'dev'} ne 'live');

local $OUTPUT_AUTOFLUSH = 1;

main();

###########################################################
###############   Main daemon loop.  ######################
###########################################################

sub main {
  my $logger = get_logger("main");
  my $help;
  my $staging_area;
  # Possible other option: list of staging areas
  GetOptions (
    'help'             => \$help,
    'staging_area|staging-area=s' => \$staging_area,
  );
  if ($help) { pod2usage(0); exit 0;}

  if (!defined $staging_area || $staging_area eq q[]) {
    $logger->logcroak("ERROR: --staging_area/--staging-area argument is required\n")
  }

  my $schema  = npg_tracking::Schema->connect();
  while (1) {
    foreach my $run_folder ( find_run_folders($staging_area) ) {
      my $monitor = Monitor::Elembio::RunFolder->new( runfolder_path      => $run_folder,
                                                      npg_tracking_schema => $schema);
      try {
        $monitor->process_run_parameters();
      } catch {
        my $error = $_;
        $logger->logcarp("RunFolder Monitor failed for $run_folder: $error");
      }
    }
    sleep $SLEEP_INTERVAL;
  }
}

1;

__END__

=head1 NAME

elembio_staging_area_monitor

=head1 VERSION

=head1 SYNOPSIS

=head1 DESCRIPTION

Document:
Expected staging path structure

=head1 SUBROUTINES/METHODS

None

=head1 CONFIGURATION AND ENVIRONMENT

If dev environment variable is set to any value that is not 'live', the script
has full functionality, but changes to the file system are not performed.
Development tracking database is used in this case.

=head1 INCOMPATIBILITIES

None known.

=head1 BUGS AND LIMITATIONS

None known.

